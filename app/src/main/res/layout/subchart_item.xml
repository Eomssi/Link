<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:orientation="horizontal">

    <!--activity_subchart.xml내에 위치한 RecyclerView에 출력될
    아이템뷰의 레이아웃을 배치하는 xml파일-->


    <!--둥글게 구독 서비스 로고를 출력하기 위해 CircleImageView 사용-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mLogoImgView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/mSubTitle"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="닌텐도 스위치 온라인"
        android:textColor="#000000"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/subTag"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_weight="1"
        android:text="#프로그램"
        android:textAlignment="viewEnd"
        android:textColor="#79B2BF"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/btnShowSubadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_forward" />

</LinearLayout>